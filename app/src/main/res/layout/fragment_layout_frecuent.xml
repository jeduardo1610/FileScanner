<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_reunion_frg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backCards">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extention"
            android:id="@+id/fileNameTextView"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="18dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="57dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ocurrences"
            android:id="@+id/fileSizeTextView"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_alignTop="@+id/fileNameTextView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="43dp"
            android:layout_marginEnd="43dp" />

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_below="@id/fileSizeTextView"
            android:layout_marginBottom="16dp" />



        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_below="@+id/line4"/>

    </RelativeLayout>

</FrameLayout>